<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.dicarea.postman.whereisthepostman">

    <uses-permission android:name="android.permission.INTERNET"/>

    <service
        android:name="es.dicarea.postman.whereisthepostman"
        android:enabled="true"/>

    <application
        android:name="es.dicarea.postman.whereisthepostman.CustomApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="es.dicarea.postman.whereisthepostman.LogActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="es.dicarea.postman.whereisthepostman.db.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light"/>

        <receiver android:name="es.dicarea.postman.whereisthepostman.StatusReceiver"/>
    </application>

</manifest>